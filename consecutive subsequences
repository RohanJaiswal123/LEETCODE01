#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int T;
    cin >> T;

    while (T--) {
        int n, k;
        cin >> n >> k;

        vector<int> arr(n);
        for (int i = 0; i < n; i++)
            cin >> arr[i];

        vector<long long> count(k, 0);
        long long sum = 0, ans = 0;

        count[0] = 1;  // Empty prefix

        for (int i = 0; i < n; i++) {
            sum += arr[i];
            int mod = ((sum % k) + k) % k;  // handle negative mods safely
            ans += count[mod];              // add previous occurrences
            count[mod]++;                   // update frequency
        }

        cout << ans << "\n";
    }

    return 0;
}
